{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": ["tsconfig.json"]
  },
  "extends": ["airbnb-typescript"],
  "plugins": ["react", "prettier", "import"],
  "rules": {
    "react/prop-types": "off",
    "prettier/prettier": "error"
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    },
    "import/extensions": [".js", ".ts", ".jsx", ".tsx"]
  }
}